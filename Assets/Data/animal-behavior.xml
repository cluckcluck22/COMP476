<behavior-tree>
  <decision frequency="5">
    <!-- IsDead -->
    <condition name="isDead" />
    <simple name="do-nothing" />
    <!-- IsHungry -->
    <condition name="isHungry" />
    <sequence>
      <parallel_first>
        <complex name="goto-food-area" />
        <repeat_success>
          <simple name="food-found" />
        </repeat_success>
      </parallel_first>
      <selector>
        <sequence>
          <parallel_first>
            <complex name="idle-wander" />
            <repeat_success>
              <simple name="food-found" />
            </repeat_success>
          </parallel_first>
          <complex name="goto-food-item" />
          <complex name="eat" />
        </sequence>
      </selector>
    </sequence>
    <!-- IsTired -->
    <condition name="isTired" />
    <sequence>
      <parallel_first>
        <complex name="goto-rest-area" />
        <repeat_success>
          <simple name="rest-found" />
        </repeat_success>
      </parallel_first>
      <selector>
        <sequence>
          <parallel_first>
            <complex name="idle-wander" />
            <repeat_success>
              <simple name="rest-found" />
            </repeat_success>
          </parallel_first>
          <complex name="goto-rest-item" />
          <complex name="rest" />
        </sequence>
      </selector>
    </sequence>
    <!-- IsBored -->
    <condition name="isBored" />
    <sequence>
      <parallel_first>
        <complex name="goto-play-area" />
        <repeat_success>
          <simple name="play-found" />
        </repeat_success>
      </parallel_first>
      <selector>
        <sequence>
          <parallel_first>
            <complex name="idle-wander" />
            <repeat_success>
              <simple name="play-found" />
            </repeat_success>
          </parallel_first>
          <complex name="goto-play-item" />
          <complex name="play" />
        </sequence>
      </selector>
    </sequence>

    <!-- Idle -->
    <condition name="should-idle" />
    <complex name="idle-wander" />
  </decision>
</behavior-tree>

